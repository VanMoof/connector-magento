<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_magento_source_tree" model="ir.ui.view">
        <field name="model">magento.source</field>
        <field name="arch" type="xml">
            <tree string="Magento Source to Warehouse Mapping" create="false"
                    delete="false" editable="top">
                <field name="name"/>
                <field name="source_code"/>
                <field name="warehouse"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_magento_source" model="ir.actions.act_window">
        <field name="name">Magento Source to Warehouses</field>
        <field name="res_model">magento.source</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_magento_source"
              name="Sources"
              parent="connector_magento.menu_magento_root"
              sequence="50"
              groups="connector.group_connector_manager"
              action="action_magento_source"/>
</odoo>
