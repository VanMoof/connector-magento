<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_magento_warehouse_tree" model="ir.ui.view">
        <field name="model">magento.warehouse</field>
        <field name="arch" type="xml">
            <tree string="Magento Warehouse Mapping" editable="top">
                <field name="warehouse_id"/>
                <field name="backend_id"/>
                <field name="magento_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_magento_warehouse" model="ir.actions.act_window">
        <field name="name">Magento Warehouses</field>
        <field name="res_model">magento.warehouse</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_magento_warehouse"
              name="Magento Warehouses"
              parent="connector_magento.menu_magento_root"
              sequence="50"
              groups="connector.group_connector_manager"
              action="action_magento_warehouse"/>
</odoo>
